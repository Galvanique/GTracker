<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="galvanique.client">
    <!-- TODO add intent filter to force app to open in login -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LogMoodActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".FindPatternsActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".GetHelpActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".TrackProgressActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".PreferencesActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>
